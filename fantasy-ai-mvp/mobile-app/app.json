{
  "expo": {
    "name": "Fantasy.AI",
    "slug": "fantasy-ai-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fantasyai.ios",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Fantasy.AI uses the microphone for voice commands and 'Hey Fantasy' wake word detection.",
        "NSHealthShareUsageDescription": "Fantasy.AI can integrate with Apple Health to provide personalized insights.",
        "NSHealthUpdateUsageDescription": "Fantasy.AI can update your health data with fantasy sports activity."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.fantasyai.android",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-speech",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "scheme": "fantasy-ai",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "fantasy-ai-mobile-2024"
      }
    }
  }
}