{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "globals.d.ts",
    "next-env.d.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/components/dashboard/**/*.tsx",
    "src/components/navigation/**/*.tsx",
    "src/components/ui/**/*.tsx",
    "src/lib/auth.ts",
    "src/lib/utils.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "mobile-app/**/*",
    "scripts/**/*",
    "src/mcp/**/*",
    "prisma/seed-nfl-rosters.ts",
    "**/*.disabled.*",
    "**/*.test.*",
    "**/*.spec.*",
    "src/test/**/*",
    "jest.config.js",
    "ml-predict-fix.ts",
    "src/lib/agi-fantasy-commissioner.ts*",
    "src/lib/universal-consciousness-interface.ts*",
    "src/lib/interplanetary-communication-system.ts*",
    "src/lib/reality-simulation-engine.ts*",
    "src/lib/time-traveling-prediction-engine.ts*",
    "src/lib/quantum-computing-infrastructure.ts*",
    "src/lib/autonomous-league-management.ts*",
    "src/lib/psychological-warfare.ts*",
    "src/lib/predictive-injury-ai.ts*",
    "src/lib/neuralink-interface.ts*",
    "src/lib/ar-social-revolution.ts*",
    "src/lib/crypto-nft-integration.ts*",
    "src/lib/ghost-lineup-technology.ts*",
    "src/lib/global-multisport-engine.ts*",
    "src/lib/league-wagering-manager.ts*",
    "src/lib/voice-assistant-engine.ts*",
    "src/lib/voice-assistant.ts*",
    "src/lib/wagering-engine.ts*",
    "src/lib/websocket-manager.ts*",
    "src/components/ar/**/*",
    "src/components/live-betting/**/*",
    "src/components/personality/**/*",
    "src/components/stock-market/**/*",
    "src/components/ui/NeonButton.tsx",
    "**/*consciousness*",
    "**/*interplanetary*",
    "**/*quantum*",
    "**/*agi*",
    "**/*time-travel*",
    "**/*reality*",
    "**/*psychological*",
    "**/*neuralink*"
  ]
}
